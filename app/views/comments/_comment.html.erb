<div class="comment">
	<p class="comment_content">
		<%= comment.comment %>
	</p>
	<p class="comment_author">
		<%= comment.user.email %>
	</p>
	<p><%= link_to "Edit", edit_post_comment_path(comment.post, comment) %></p>
	<p><%= link_to "Delete", [comment.post, comment], method: :delete, data: { confirm: "Are you sure?" } %></p>
</div>